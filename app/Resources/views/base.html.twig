                                $(this).datepicker('setDate', new Date(inst.selectedYear, inst.selectedMonth, inst.selectedDay));
                            }
                        });
                    });
                })(jQuery);
                function addMsg(type, msg) {
                    var sticky = false;
                    var life = 3000;
                    switch (type) {
                        case 'danger':
                            theme = 'bg-red';
                            life = 10000;
                            break;
                        case 'success':
                            theme = 'bg-green';
                            break;
                        case 'warning':
                            theme = 'bg-orange';
                            break;
                        case 'info':
                            theme = 'bg-azure';
                            break;
                        default:
                            theme = 'bg-gray';

                    }
                    $.jGrowl(msg, {
                        sticky: sticky,
                        position: "top-right",
                        theme: theme,
                        life: life
                    });
                }
