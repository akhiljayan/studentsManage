{{ form_start(form) }}
<div class="modal-header">
    <button aria-label="Close" data-dismiss="modal" class="close" type="button">
        <span aria-hidden="true">Ã—</span></button>
    <h4 class="modal-title">Add New Class</h4>
</div>
<div class="modal-body">
    <table class="table table-bordered table-striped table-condensed CaptionSmall">
        <tbody>
            <tr>
                <td>{{ form_label(form.classNum) }}:</td>
                <td>{{ form_widget(form.classNum) }}</td>
            </tr>
            <tr>
                <td>{{ form_label(form.classString) }}:</td>
                <td>{{ form_widget(form.classString) }}</td>
            </tr>
            <tr>
                <td>{{ form_label(form.roomNumber) }}:</td>
                <td>{{ form_widget(form.roomNumber) }}</td>
            </tr>
            {% if is_granted('ROLE_SM_SUPERUSER') %}
                <tr>
                    <td>{{ form_label(form.classAttendenceTable) }}:</td>
                    <td>{{ form_widget(form.classAttendenceTable) }}</td>
                </tr>
            {%endif%}
        </tbody>
    </table>
</div>
<div class="modal-footer">
    <button data-dismiss="modal" class="btn btn-outline pull-left" type="button">Close</button>
    {{ form_row(form.save) }}
</div>
{{ form_end(form) }}