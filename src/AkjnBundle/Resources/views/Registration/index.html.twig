{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Registration list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Displayname</th>
                <th>Userid</th>
                <th>Dob</th>
                <th>Mobilenumber</th>
                <th>Securityanswer</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Ipaddress</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('registration_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.displayName }}</td>
                <td>{{ entity.userId }}</td>
                <td>{% if entity.dob %}{{ entity.dob|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.mobileNumber }}</td>
                <td>{{ entity.securityAnswer }}</td>                
                <td>{{ entity.ipAddress }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('registration_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('registration_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('registration_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
