{% extends '::base.html.twig' %}
{% block title %}FYFI {% endblock %}
{% block stylesheets %}
    {{ parent() }} 
    <style>
        .header{
            border-bottom: 1px solid gray;
            min-height: 65px;
            background: url({{ asset('bundles/portal/images/background1.jpg')}}) repeat scroll 0 0 ;
        }
        .header-fyfi{
            background: #fff url({{ asset('bundles/portal/images/fyfiheader.jpg')}}) no-repeat scroll left bottom;
            height: 65px;
            margin: 0;
            padding: 0;
            width: 100%;
        }
        .captcha{
            width: 40% !important;
            float: left;
            margin-top: 10px;
            margin-right: 5px;
        }
    </style>
{% endblock %}
{% block body %} 
    <div class="header">
        <div class="header-fyfi">
            {#<div class="row" style="margin-bottom: 5px;">
                <div class="col-md-12 center center-block" style="text-align:center;  margin-top:5px">
                    <div class="col-md-2 logo">
                    </div>
                    <div class="col-md-8 center text-center text-olive">
                        <div class="col-md-12">
                            <div class="col-md-2">
                                <img class="pull-right" src="{{ asset('bundles/portal/images/gok50.png') }}" />
                            </div>
                            <div class="col-md-8">
                                <b><h2 style="margin-top: 5px; font-size: xx-large; font-weight: bolder;">FIVE YEAR FISCAL IMPACT</h2></b>
                            </div>
                            <div class="col-md-2">
                                <img class="pull-left" src="{{ asset('bundles/portal/images/gok50.png') }}" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2 logo ">
                    </div>
                </div>
            </div>
            <div class="row center" style="text-align:center">
                <b class="no-margin"><h4 class="no-margin" style="margin-bottom: 5px; font-size: medium; font-weight: bolder;">(FYFI)</h4></b>
            </div>#}
        </div>
    </div>
    <!-- main content -->
    <div class="main-content" style="margin: 5px 5px 5px 5px">
        <div class="row" style="margin-top: 60px;" >
            <!-- left column -->
            <div class="col-md-6 col-md-offset-3" >
                <!-- general form elements -->
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Sign in to continue</h3>
                    </div><!-- /.panel-header -->
                    <!-- form start -->
                    <form action="{{ path('fos_user_security_check') }}" id="{{form.vars.id}}" method="post"  autocomplete="off" >
                        <div class="panel-body ">
                            {% if error %}
                                <div class="alert alert-danger">
                                    <button class="close pull-right" aria-hidden="true" data-dismiss="alert" type="button" style="margin-top: -1%;width: 10%;">Ã—</button>
                                    <b>Alert!</b>
                                    {{ error|trans}}
                                </div>
                            {% endif %}
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="glyphicon glyphicon-user"></i>
                                    </span> 
                                    <input class="form-control " autocomplete="off" type="text" id="_peru" name="_peru" placeholder="Username:" required="required" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="glyphicon glyphicon-lock"></i>
                                    </span>
                                    <input class="form-control " autocomplete="off" type="password" id="_thakol" placeholder="Password:" name="_thakol" required="required" />
                                </div>
                            </div>                                       
                            <div class="form-group">
                                <small >Please fill the text field as shown in the image</small>
                                <div class="col-md-12">{{ form_widget(form.captcha,{'attr':{'class':'form-control captcha', 'size':20} })}}</div>
                            </div>                                       
                            <div class="clearfix"></div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                            <input type="hidden" id="_uppu" name="_uppu" value="{{ browserSalt }}" />
                        </div><!-- /.panel-body -->
                        <div class="panel-footer">
                            <div class=" btn-group btn-group-justified"role="group" >
                                <div class="btn-group" role="group"> <button id="_submit" name="_submit" class="btn btn-success" type="submit">
                                        Log in
                                    </button></div>
                                <div class="btn-group" role="group"> <button id="_reset" name="_reset" class="btn" type="reset">
                                        Reset
                                    </button></div>
                            </div>
                        </div>
                    </form>

                </div><!-- /.panel -->
            </div><!--/.col (left) -->
        </div>
    </div>
{% endblock %}
{% block javascripts %} 
    {{ parent() }}
    <script src="{{ asset('bundles/nicresources/js/sjcl.js') }}" type = "text/javascript" ></script>
    <script type="text/javascript">
        (function ($) {
            $(document).ready(function () {
                var thisForm = $("#{{form.vars.id}}");
                thisForm.applyMust();
                var peru = $("#_peru");
                var thakol = $("#_thakol");
                var uppu = $("#_uppu");
                $('input[type="submit"]').attr('disabled', 'disabled');
                var oPath = "{{ path('slbundle_login_user_test', {'userName' : '__per__'}) }}";
                peru.focusout(function (e) {
                    var userData = $(e.target).val();
                    if (userData !== "") {
                        var path = oPath.replace('__per__', userData);
                        $.ajax({
                            type: 'POST',
                            url: path,
                            success: function (result) {
                                uppu.val(result.uppu);
                                $('input[type="submit"]').removeAttr('disabled');
                            }
                        });
                    } else {
                        $('input[type="submit"]').attr('disabled', 'disabled');
                    }
                });
                thisForm.submit(function () {
                    thisForm.validate();
                    if (thisForm.valid()) {
                        var baS1 = sjcl.hash.sha256.hash(thakol.val());
                        var digestS1 = sjcl.codec.hex.fromBits(baS1);
                        var baS2 = sjcl.hash.sha256.hash(digestS1 + '{' + uppu.val() + '}');
                        var digestS2 = sjcl.codec.hex.fromBits(baS2);
                        thakol.val(digestS2);
                    }
                });


            });
        })(jQuery);
    </script>
{% endblock %}  
